<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sk.fiit.jibrarian.controllers.UserAuthController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label text="Choose button based on your task" />
        <Button fx:id="user_auth" text="User Authentication"/>
        <Button fx:id="user_screen" text="User Screen" onAction="#switchToUserScreen"/>
        <Button fx:id="librarian_screen" text="Librarian Screen" onAction="#switchToLibrarianScreen"/>
        <Button fx:id="admin_screen" text="Admin Screen" onAction="#switchToAdminScreen"/>
    </children>
</VBox>
